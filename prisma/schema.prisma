// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rider {
  id        Int      @id @default(autoincrement())
  name      String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime?
  Rides     Ride[]
}

model Driver {
  id        Int      @id @default(autoincrement())
  name      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime?
  Rides     Ride[]
}

model Ride {
  id         Int         @id @default(autoincrement())
  status     String
  fare       Int
  rider      Rider       @relation(fields: [riderId], references: [id])
  riderId    Int
  driver     Driver      @relation(fields: [driverId], references: [id])
  driverId   Int
  canceledBy String?
  startAt    DateTime?
  endAt      DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime?
}